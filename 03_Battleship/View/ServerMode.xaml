<UserControl x:Class="_03_Battleship.View.ServerMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_03_Battleship.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/View/GlobalResources.xaml" />
    </UserControl.Resources>
    <Grid>
        <StackPanel MaxWidth="500" VerticalAlignment="Center" Height="250">
            <TextBlock Text="Теперь приложение работает как сервер." Style="{StaticResource Mainheadline}" TextWrapping="Wrap" Margin="0 0 0 20" Foreground="#FF00A0FA"/>
            <TextBlock Text="Не закрывайте его." Style="{StaticResource Mainheadline}" TextWrapping="Wrap" Foreground="#FF00A0FA"/>
            <Button Content="Выйти из сервера" Command="{Binding QuitServerModeCommand}" Foreground="#FF00A0FA" />
        </StackPanel>
    </Grid>
</UserControl>
